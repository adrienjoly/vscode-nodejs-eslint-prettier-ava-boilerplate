{
  "name": "vscode-nodejs-eslint-prettier-ava-boilerplate",
  "version": "1.0.0",
  "description": "A starter kit for new node.js projects with modern linting, formatting and testing for Visual Studio Code",
  "main": "index.js",
  "scripts": {
    "test": "npx ava"
  },
  "author": "Adrien Joly",
  "license": "MIT",
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "env": {
      "node": true
    }
  },
  "dependencies": {
    "ava": "^2.4.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.19.1"
  },
  "prettier": {
    "singleQuote": true
  }
}
